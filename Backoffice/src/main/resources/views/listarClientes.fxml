<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.clinicadesktop.controllers.ListarClientesController">

    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40;" prefWidth="600" prefHeight="400">
        <Label text="Lista de Clientes" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <TableView fx:id="tabelaClientes" prefWidth="800" prefHeight="600">
            <columns>
                <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="150"/>
                <TableColumn fx:id="contactoColumn" text="Contacto" prefWidth="120"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="120"/>
                <TableColumn fx:id="moradaColumn" text="Morada" prefWidth="110"/>
            </columns>
        </TableView>

        <Button text="Voltar ao Menu" onAction="#voltarMenuPrincipal" prefWidth="150"/>
    </VBox>
</StackPane>
